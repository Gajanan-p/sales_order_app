    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.orderproduct.OrderProductFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/form_background"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.17"
                        android:text="Barcode"
                        android:layout_marginLeft="4dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edit_order_product_barcode"
                        style="@style/EditTextViewComponent"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:id="@+id/img_order_product_camera_scan_barcode"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/barcode_icon_2_png"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_order_product_ok"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:text="@string/ok"
                        android:background="@drawable/button_background"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

