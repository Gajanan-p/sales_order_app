        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="Sr.No."
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="Barcode"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="Style No."
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="Color"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="468dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:gravity="center|center_horizontal"
                            android:text="Size"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="Total"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="Mrp"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="Gross Amount"
                            android:textSize="16sp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="490dp"
                            android:layout_height="30dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="S"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="M"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="L"
                            android:textSize="16sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="XL"
                            android:textSize="16sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="2XL"
                            android:textSize="16sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="3XL"
                            android:textSize="16sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="4XL"
                            android:textSize="16sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="5XL"
                            android:textSize="16sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/blue_200"
                            android:padding="4dp"
                            android:text="6XL"
                            android:textSize="16sp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_order_product_bill_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/row_amount_bill" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue_200"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="800dp"
                                android:layout_height="30dp"
                                android:editable="false"
                                android:clickable="false"
                                android:background="@color/white"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_order_product_list_total_qty"
                                android:layout_width="155dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@color/light_total_amt"
                                android:padding="4dp"
                                android:text=" All Total"
                                android:textSize="16sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_order_product_total"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@color/light_total_amt"
                                android:padding="4dp"
                                android:text="2000.00"
                                android:textSize="16sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_order_product_mrp_total"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@color/light_total_amt"
                                android:padding="4dp"
                                android:text="20000.00"
                                android:textSize="16sp" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_order_product_gross_total_amt"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@color/light_total_amt"
                                android:padding="4dp"
                                android:text="20000.00"
                                android:textSize="16sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </HorizontalScrollView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_order_product_list_cancel"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_background"
                        android:text="Cancel"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="50dp"
                        android:layout_height="40dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_order_product_list_save"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_background"
                        android:text="Save"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="50dp"
                        android:layout_height="40dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_order_product_list_preview"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_background"
                        android:text="Preview"
                        android:textColor="@color/white" />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>


