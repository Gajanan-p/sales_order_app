<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.saleorder.SaleOrderFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/form_background"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:orientation="vertical"
                    >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="Doc No."
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_doc_no"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:text="SE"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="Date:-"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="03/06/2022"
                            android:textSize="16sp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Customer Name"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autoComplete_sale_order_customer_name"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Station:-"
                            android:gravity="left|center_horizontal"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_customer_station"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:textSize="16sp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Address"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_customer_address"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Consignee"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autoComplete_sale_order_consignee"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Station:-"
                            android:gravity="left|center_horizontal"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_consignee_station"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:textSize="16sp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Address"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_consignee_address"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center|center_horizontal"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.40"
                            android:text="Delivery Days"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_sale_order_delivery_days"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="Date:-"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_delivery_date"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="0.4"
                            android:hint="03/06/2022"
                            android:textSize="16sp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.40"
                            android:text="Payment Days"
                            android:textSize="16sp"
                            android:layout_gravity="center|center_horizontal"
                            />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_sale_order_payment_days"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/edit_text_background"
                            android:layout_gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="Due Date:-"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_payment_due_date"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:hint="03/06/2022"
                            android:layout_gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center|center_horizontal"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Transporter"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_sale_order_transporter"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Remark"
                            android:textSize="16sp"
                            />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_sale_order_remark"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center|center_horizontal"
                            android:textSize="16sp"
                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                >
                <Space
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_sale_order_next"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Next"
                    android:layout_gravity="right|center_horizontal"
                    android:background="@drawable/button_background"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>