<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.customerrregistration.RegistrationFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/light_rosybrown">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@null">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="6dp"
                            android:layout_gravity="center_horizontal">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_baseline_person_24"
                                android:layout_gravity="center_horizontal"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/horizontal_card"
                        android:layout_marginBottom="@dimen/horizontal_card"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/rv_courses"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/horizontal_dashboard"
                            android:layout_marginTop="@dimen/normalPadding"
                            android:layout_marginRight="@dimen/horizontal_dashboard"
                            android:orientation="vertical"
                            app:spanCount="2">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="vertical"
                                        android:padding="1dp"
                                        android:weightSum="1">
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatEditText
                                                android:id="@+id/edit_registration_customer_name"
                                                android:layout_width="match_parent"
                                                android:hint="Customer Name"
                                                android:background="@color/white"
                                                android:textSize="16sp"
                                                android:layout_height="wrap_content"/>
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatEditText
                                                android:id="@+id/edit_registration_contact_person"
                                                android:layout_height="wrap_content"
                                                android:layout_width="match_parent"
                                                android:background="@color/white"
                                                android:textSize="16sp"
                                                android:hint="Contact Person"/>
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:id="@+id/edit_registration_gender"
                                                style="@style/BarcodeEditTextViewComponent"
                                                android:layout_height="wrap_content"
                                                android:layout_width="match_parent"
                                                android:textSize="16sp"
                                                android:hint="   Select Gender.."
                                                android:paddingLeft="120dp"
                                                android:drawableRight="@drawable/spinner_bg"/>
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatEditText
                                                android:id="@+id/edit_registration_phone_no"
                                                android:layout_height="wrap_content"
                                                android:layout_width="match_parent"
                                                android:background="@color/white"
                                                android:hint="Enter Phone Number"
                                                android:textSize="16sp"
                                                android:inputType="number" />
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatEditText
                                                android:id="@+id/edit_registration_mobile_no"
                                                android:layout_height="wrap_content"
                                                android:background="@color/white"
                                                android:layout_width="match_parent"
                                                android:hint="Enter Mobile Number"
                                                android:textSize="16sp"
                                                android:inputType="number" />
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatEditText
                                                android:id="@+id/edit_registration_email"
                                                android:layout_height="wrap_content"
                                                android:background="@color/white"
                                                android:layout_width="match_parent"
                                                android:textSize="16sp"
                                                android:hint="Enter Email Id"
                                                android:inputType="textEmailAddress" />
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:id="@+id/edit_registration_category"
                                                style="@style/BarcodeEditTextViewComponent"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.65"
                                                android:hint="  Select Category Type.."
                                                android:textSize="16sp"
                                                android:drawableRight="@drawable/spinner_bg" />
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatEditText
                                                android:id="@+id/edit_registration_gst_no"
                                                android:layout_height="wrap_content"
                                                android:background="@color/white"
                                                android:hint="Enter GST Number"
                                                android:textSize="16sp"
                                                android:layout_width="match_parent"
                                                />
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <androidx.appcompat.widget.AppCompatEditText
                                                android:id="@+id/edit_registration_address"
                                                android:layout_height="wrap_content"
                                                android:layout_width="match_parent"
                                                android:background="@color/white"
                                                android:textSize="16sp"
                                                android:hint="Enter Address"/>
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/button_registration_add_more_information"
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:text="Add More Information"
                                            />

                                        <LinearLayout
                                            android:id="@+id/layout_registration_add_more_info"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:visibility="gone"
                                            >
                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/edit_registration_sale_type"
                                                    style="@style/BarcodeEditTextViewComponent"
                                                    android:layout_width="match_parent"
                                                    android:layout_weight="0.65"
                                                    android:hint="  Select Sale Type.."
                                                    android:textSize="16sp"
                                                    android:drawableRight="@drawable/spinner_bg" />
                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/edit_registration_account_type"
                                                    style="@style/BarcodeEditTextViewComponent"
                                                    android:layout_width="match_parent"
                                                    android:drawableRight="@drawable/spinner_bg"
                                                    android:textSize="16sp"
                                                    android:hint="  Select Account Type" />
                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/edit_registration_broker_name"
                                                    style="@style/BarcodeEditTextViewComponent"
                                                    android:layout_width="match_parent"
                                                    android:drawableRight="@drawable/spinner_bg"
                                                    android:textSize="16sp"
                                                    android:hint="  Select Broker Type" />
                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/edit_registration_transporter_name"
                                                    style="@style/BarcodeEditTextViewComponent"
                                                    android:layout_width="match_parent"
                                                    android:drawableRight="@drawable/spinner_bg"
                                                    android:textSize="16sp"
                                                    android:hint="  Select Transporter Type" />
                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/edit_registration_price_list"
                                                    style="@style/BarcodeEditTextViewComponent"
                                                    android:layout_width="match_parent"
                                                    android:hint="  Select Price List.."
                                                    android:textSize="16sp"
                                                    android:drawableRight="@drawable/spinner_bg" />
                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/edit_registration_station"
                                                    style="@style/BarcodeEditTextViewComponent"
                                                    android:layout_width="match_parent"
                                                    android:hint="  Select Station List..."
                                                    android:textSize="16sp"
                                                    android:drawableRight="@drawable/spinner_bg" />
                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/edit_registration_discount"
                                                    style="@style/BarcodeEditTextViewComponent"
                                                    android:layout_width="match_parent"
                                                    android:hint="  Select Discount..."
                                                    android:textSize="16sp"
                                                    android:drawableRight="@drawable/spinner_bg" />
                                            </com.google.android.material.textfield.TextInputLayout>

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:id="@+id/edit_registration_percentage"
                                                style="@style/BarcodeEditTextViewComponent"
                                                android:layout_marginLeft="15dp"
                                                android:textSize="16sp"
                                                android:layout_width="match_parent" />
                                        </LinearLayout>

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <Space
                                            android:layout_width="20dp"
                                            android:layout_height="40dp" />

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/button_registration_cancel"
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:layout_weight="0.50"
                                            android:background="@drawable/bg_gradient"
                                            android:text="Cancel" />

                                        <Space
                                            android:layout_width="100dp"
                                            android:layout_height="40dp" />

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/button_registration_save"
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:layout_weight="0.50"
                                            android:background="@drawable/bg_gradient"
                                            android:text="Save" />

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>